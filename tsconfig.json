{
  "compilerOptions": {
    "target": "ESNext",
    "jsx": "preserve",
    "module": "CommonJS",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "baseUrl": "./src",
    "paths": {
      "*": ["types/*", "*"]
    }
  }
}
